# ============================================================
# CONFIGURACIÓN DEL SISTEMA MULTIAGENTE
# ============================================================
# Copia este archivo a .env y configura tus valores

# ============================================================
# API KEYS
# ============================================================
GEMINI_API_KEY=your_gemini_api_key_here
E2B_API_KEY=your_e2b_api_key_here

# ============================================================
# CONFIGURACIÓN DEL MODELO LLM
# ============================================================
# Modelo a usar (gemini-2.5-flash, gemini-1.5-pro, etc.)
MODEL_NAME=gemini-2.5-flash

# Temperatura del modelo (0.0 = determinista, 1.0 = creativo)
TEMPERATURE=0.1

# Máximo de tokens de salida
MAX_OUTPUT_TOKENS=8192

# Máximo de intentos para corregir tests fallidos
MAX_TEST_FIX_ATTEMPTS=2

# Timeout en segundos para ejecución de tests (vitest/pytest)
TEST_EXECUTION_TIMEOUT=60

# ============================================================
# MODO TESTING/MOCK
# ============================================================
# Activa modo mock para testing sin llamadas reales al LLM
LLM_MOCK_MODE=false

# Usar wrapper de LangChain (proporciona callbacks, streaming, token counting)
USE_LANGCHAIN_WRAPPER=false

# ============================================================
# CONFIGURACIÓN DE AZURE DEVOPS (Opcional)
# ============================================================
AZURE_DEVOPS_ENABLED=false
AZURE_DEVOPS_ORG=your_organization
AZURE_DEVOPS_PROJECT=your_project
AZURE_DEVOPS_PAT=your_personal_access_token
AZURE_ITERATION_PATH=MyProject\\Sprint 1
AZURE_AREA_PATH=MyProject\\Backend
AZURE_ASSIGNED_TO=

# ============================================================
# CONFIGURACIÓN DE GITHUB (Opcional)
# ============================================================
GITHUB_ENABLED=false
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REVIEWER_TOKEN=your_reviewer_token_optional
GITHUB_OWNER=your_username_or_org
GITHUB_REPO=your_repository_name
GITHUB_BASE_BRANCH=main
GITHUB_REPO_PATH=C:\path\to\your\local\repo

# ============================================================
# CONFIGURACIÓN DE SONARCLOUD (Opcional)
# ============================================================
SONARCLOUD_ENABLED=false
SONARCLOUD_TOKEN=your_sonarcloud_token
SONARCLOUD_ORGANIZATION=your_organization
SONARCLOUD_PROJECT_KEY=your_project_key

# Timeouts para análisis de SonarCloud (cuando se integra con GitHub)
# Tiempo total máximo: MAX_ATTEMPTS * WAIT_SECONDS = 10 * 30 = 300s (5 minutos)
SONARCLOUD_ANALYSIS_TIMEOUT=300          # Timeout total en segundos
SONARCLOUD_ANALYSIS_MAX_ATTEMPTS=10      # Número máximo de intentos de polling
SONARCLOUD_ANALYSIS_WAIT_SECONDS=30      # Segundos entre cada intento

# ============================================================
# CONFIGURACIÓN DE SONARQUBE LOCAL (Opcional)
# ============================================================
SONARQUBE_URL=http://localhost:9000
SONARQUBE_TOKEN=your_sonarqube_token
SONARQUBE_PROJECT_KEY=your_project_key

# ============================================================
# CONFIGURACIÓN DE LOGGING
# ============================================================
# Nivel de logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Guardar logs en archivo
LOG_TO_FILE=true
